<resources>

    <style name="TickTockTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.TickTock</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
    </style>

    <style name="ActionBar.TickTock" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/TextAppearance.TitleBar</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="TextAppearance.TitleBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleStrip">
        <item name="android:background">@color/app_color</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

    <style name="CalendarTitle">
        <item name="android:gravity">left</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">@dimen/calendar_text_medium</item>
        <item name="android:background">@drawable/calendar_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceLightLarge">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">36sp</item>
    </style>

</resources>